# API Keys
GOOGLE_GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=claude_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_MODEL_DEPLOYMENT=gpt-4o-ms
SILICONFLOW_API_KEY=your_siliconflow_api_key_here

# Speech Recognition
SPEECH_RECOGNITION_LANGUAGE=tr-TR
VOSK_MODEL_PATH=path/to/vosk/model
SPEECH_ENERGY_THRESHOLD=300
SPEECH_DYNAMIC_ENERGY_THRESHOLD=true
SPEECH_PAUSE_THRESHOLD=0.8
SPEECH_SAMPLE_RATE=16000
SPEECH_CHANNELS=2

# Voice Mode Settings
VOICE_MODE_TIMEOUT=300
VOICE_MODE_CONFIRMATION_SOUND=true
VOICE_ACTIVATION_KEYWORDS=hey asistan,merhaba asistan,asistan

# Logging
LOG_LEVEL=INFO
LOG_FILE=assistant.log

# Web Automation
BROWSER_USE_TIMEOUT=30
PLAYWRIGHT_HEADLESS=true

# System
TEMP_DIR=./data/artifacts
PLUGINS_DIR=./src/plugins/implementations